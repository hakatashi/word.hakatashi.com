.post
  position: relative
  text-align: center
  border-bottom: 1px dashed #ddd
  margin: 0 0 4.5em
  padding: 0 0 3em

  &::after
    content: ''
    display: block
    background: url('https://cdn.jsdelivr.net/gh/frontendsophie/hexo-theme-autumn@1.0.0/source/img/button.svg') no-repeat -46px top / 132px 35px
    width: 88px
    height: 35px
    position: absolute
    left: 50%
    top: 100%
    transform: translate(-50%, -18px)

  .post-cat
    display: inline-block
    margin: 0 0 5px
    &:first-of-type::after
      content: "\00B7"
      margin: 0 .75em
      color: #f78769
    &:last-of-type::after
      content: ''
    a
      font: 700 13px Lato-Bold
      color: #f78769
      text-decoration: none
      transition: .3s
      text-transform: upperCase
      letter-spacing: 1px
      &:hover
        color: #777

  .post-title
    margin: 0
    font-size: 2.5rem
    font-family: "Yu Mincho", YuMincho, "Hiragino Mincho ProN", "Hiragino Mincho Pro", "Source Han Serif", "Source Han Serif JP", "BIZ UDMincho Medium", "Noto Serif JP", "Source Serif Pro", "Source Serif", "Noto Serif", "Times New Roman", "Georgia Pro", Georgia, "Songti SC", "Source Han Serif SC", "Source Han Serif CN", "Noto Serif SC", Simsun, "Songti TC", "Source Han Serif TC", "Source Han Serif TW", "Source Han Serif HK", "Noto Serif TC", PMingLiu, AppleMyungjo, "Source Han Serif K", "Source Han Serif KR", "Noto Serif KR", Batang, serif
    color: #777
    a
      color: #777
      text-decoration: none

  .post-subtitle
    margin: 0
    font-size: 1rem
    font-weight: normal
    font-family: "Yu Mincho", YuMincho, "Hiragino Mincho ProN", "Hiragino Mincho Pro", "Source Han Serif", "Source Han Serif JP", "BIZ UDMincho Medium", "Noto Serif JP", "Source Serif Pro", "Source Serif", "Noto Serif", "Times New Roman", "Georgia Pro", Georgia, "Songti SC", "Source Han Serif SC", "Source Han Serif CN", "Noto Serif SC", Simsun, "Songti TC", "Source Han Serif TC", "Source Han Serif TW", "Source Han Serif HK", "Noto Serif TC", PMingLiu, AppleMyungjo, "Source Han Serif K", "Source Han Serif KR", "Noto Serif KR", Batang, serif
    &::after
      content: ""
      display: block
      margin: .5em auto
      width: 20%
      height: 2px
      background-color: #f3f3f3

  .post-date
    padding: 0
    list-style: none
    color: #bbb
    font: 14px/1.6 Lato
    li
      display: inline-block
      &:first-child::after
        content: "\00B7"
        margin: 0 .75em
  .post-cover
    position: relative
    user-select: none
    &:after
      position: absolute
      content: ''
      width: 82%
      height: 100%
      top: 0
      left: 50%
      transform: translateX(-50%)
      box-shadow:0 0 40px 10px #ffffff inset
    img
      max-width: 80%
      border-radius: 10px

  .post-content
    position: relative
    color: #777
    font-size: 1rem
    line-height: 1.6
    margin-bottom: 1.5em
    text-align: left
    a.more-link
      box-shadow: inset 0 -80px 80px -5px rgba(255,255,255,.75)
      color: #f78769
      font-family: Lora-Bold
      font-weight: 700
      display: block
      width: 100%
      position: absolute
      bottom: -32px
      padding-top: 100px
      text-align: center
      text-decoration: none
      transition: .5s
      &:hover
        box-shadow: none
    cite
      font-style: normal
      text-decoration: none
      color: cornflowerblue
    img
      max-width: 100%
      border-radius: 4px
